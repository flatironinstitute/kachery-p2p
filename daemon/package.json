{
  "name": "kachery-p2p-daemon",
  "version": "0.8.9-dev",
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "Peer-to-peer content-addressable file sharing",
  "bin": {
    "kachery-p2p-daemon": "dist/cli.js"
  },
  "scripts": {
    "start": "tsc && node dist/cli.js",
    "dev": "ts-node ./src/cli.ts",
    "build": "tsc",
    "origtest": "ts-node ./src/test.ts",
    "test": "KACHERY_P2P_SPEEDUP_FACTOR=100 mocha -r ts-node/register $MOCHA_OPTS 'tests/**/*.ts'",
    "coverage": "nyc --reporter=text $MOCHA_OPTS --reporter=lcov yarn test",
    "publish-dry": "npm publish --dry-run",
    "publish-go": "npm publish"
  },
  "repository": "https://github.com/flatironinstitute/kachery_p2p",
  "author": "Jeremy Magland",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/bson": "^4.0.2",
    "@types/express": "^4.17.8",
    "@types/js-yaml": "^3.12.5",
    "@types/json-socket": "^0.1.17",
    "@types/node": "^14.11.1",
    "@types/sqlite3": "^3.1.6",
    "@types/ws": "^7.2.7",
    "@types/yargs": "^15.0.9",
    "ajv": "^6.12.4",
    "async-mutex": "^0.2.6",
    "axios": "^0.21.1",
    "bson": "^4.1.0",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "js-yaml": "^3.14.0",
    "json-socket": "^0.3.0",
    "jsonschema": "^1.2.6",
    "sqlite": "^4.0.17",
    "sqlite3": "^5.0.0",
    "ws": "^7.3.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}